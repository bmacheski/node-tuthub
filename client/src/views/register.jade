h3 Register
div.row
  form.col.s12(name="reg" ng-submit="reg.$valid && register.signup()")
    div.row
      div.input-field.col.s12
        input#email(type="text" ng-model="register.info.username")
        label(for="username") Username
    div.row
      div.input-field.col.s12
        input(type="password" name="password" ng-model="register.info.password")
        label(for="password") Password
      div.input-field.col.s12
        input(type="password" name="confirm" ng-model="register.info.confirm" match="register.info.password")
        label(for="password") Password confirmation
      span.pw-error(ng-show="reg.$submitted && !reg.$valid") Passwords do not match
    input.waves-effect.waves-light.btn(type="submit" value="Submit")
